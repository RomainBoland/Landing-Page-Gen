<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ project.product_name }} - {{ project.tagline }}</title>
    <meta name="description" content="{{ project.description[:160] }}">
    <meta name="keywords" content="{{ project.keywords | join(', ') }}">
    {% if assets.og_image_prompt %}
    <!-- OG Image placeholder: {{ assets.og_image_prompt }} -->
    <meta property="og:image" content="https://placehold.co/1200x630/{{ brand.colors.primary[1:] }}/white?text={{ project.product_name | urlencode }}">
    {% endif %}

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family={{ brand.fonts.heading | replace(' ', '+') }}:wght@600;700;800&family={{ brand.fonts.body | replace(' ', '+') }}:wght@400;500&display=swap" rel="stylesheet">

    <!-- Tailwind Config -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '{{ brand.colors.primary }}',
                        secondary: '{{ brand.colors.secondary }}',
                        accent: '{{ brand.colors.accent }}',
                    },
                    fontFamily: {
                        heading: ['{{ brand.fonts.heading }}', 'sans-serif'],
                        body: ['{{ brand.fonts.body }}', 'sans-serif'],
                    }
                }
            }
        }
    </script>
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, {{ brand.colors.primary }} 0%, {{ brand.colors.secondary }} 100%);
        }
        .glass-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
    </style>
</head>
<body class="font-body" style="background-color: {{ brand.colors.background }}; color: {{ brand.colors.text }}">

    {# === TEMPLATE: App - Bold, mobile-first, app-store style === #}
    {# === Tone: {{ tone }} === #}

    {# === Hero Section with Gradient === #}
    <section class="gradient-bg min-h-screen flex items-center justify-center px-4 relative overflow-hidden">
        {# Decorative circles #}
        <div class="absolute top-20 left-10 w-72 h-72 rounded-full opacity-20" style="background-color: {{ brand.colors.accent }}; filter: blur(80px);"></div>
        <div class="absolute bottom-20 right-10 w-96 h-96 rounded-full opacity-20" style="background-color: {{ brand.colors.secondary }}; filter: blur(100px);"></div>

        <div class="max-w-4xl mx-auto text-center relative z-10">
            <h1 class="font-heading {{ tone_style.hero_size }} mb-6 text-white leading-tight">
                {{ headline }}
            </h1>
            <p class="text-xl md:text-2xl mb-10 text-white opacity-90 max-w-2xl mx-auto">
                {{ content.hero.subheadline }}
            </p>

            {# App Store Buttons #}
            <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
                <a href="#" class="inline-flex items-center gap-3 px-6 py-4 bg-black {{ tone_style.cta_style }} text-white transition-transform hover:scale-105">
                    <span class="text-3xl">&#63743;</span>
                    <div class="text-left">
                        <div class="text-xs opacity-70">Download on the</div>
                        <div class="text-lg font-semibold">App Store</div>
                    </div>
                </a>
                <a href="#" class="inline-flex items-center gap-3 px-6 py-4 bg-black {{ tone_style.cta_style }} text-white transition-transform hover:scale-105">
                    <span class="text-3xl">&#9654;</span>
                    <div class="text-left">
                        <div class="text-xs opacity-70">Get it on</div>
                        <div class="text-lg font-semibold">Google Play</div>
                    </div>
                </a>
            </div>

            <p class="text-white opacity-70 text-sm">
                {{ cta_text }} - Free to download
            </p>

            {# App Screenshot placeholder #}
            {% if assets.hero_image_prompt %}
            <div class="mt-12 mx-auto max-w-xs">
                <div class="aspect-[9/19] rounded-3xl overflow-hidden shadow-2xl border-4 border-white/20">
                    <!-- Hero image placeholder: {{ assets.hero_image_prompt }} -->
                    <img src="https://placehold.co/400x850/{{ brand.colors.secondary[1:] }}/white?text={{ project.product_name | urlencode }}+App"
                         alt="{{ assets.hero_image_alt or project.product_name }}"
                         class="w-full h-full object-cover">
                </div>
            </div>
            {% endif %}
        </div>
    </section>

    {# === Screenshots Section (conditional) === #}
    {% if sections.screenshots %}
    <section class="py-20 px-4">
        <div class="max-w-6xl mx-auto">
            <h2 class="font-heading text-3xl md:text-4xl font-bold text-center mb-12">
                <span style="color: {{ brand.colors.primary }}">Beautiful</span> interface
            </h2>
            <div class="flex gap-6 overflow-x-auto pb-4 snap-x snap-mandatory">
                {% for prompt in assets.screenshot_prompts %}
                <div class="flex-shrink-0 w-64 snap-center">
                    <div class="aspect-[9/19] rounded-2xl overflow-hidden shadow-lg border" style="border-color: {{ brand.colors.secondary }}20">
                        <!-- Screenshot placeholder: {{ prompt }} -->
                        <img src="https://placehold.co/320x680/{{ brand.colors.primary[1:] }}/white?text=Screen+{{ loop.index }}"
                             alt="{{ project.product_name }} screenshot {{ loop.index }}"
                             class="w-full h-full object-cover">
                    </div>
                </div>
                {% else %}
                {% for i in range(3) %}
                <div class="flex-shrink-0 w-64 snap-center">
                    <div class="aspect-[9/19] rounded-2xl overflow-hidden shadow-lg border" style="border-color: {{ brand.colors.secondary }}20">
                        <img src="https://placehold.co/320x680/{{ brand.colors.primary[1:] }}/white?text=Screen+{{ loop.index }}"
                             alt="{{ project.product_name }} screenshot"
                             class="w-full h-full object-cover">
                    </div>
                </div>
                {% endfor %}
                {% endfor %}
            </div>
        </div>
    </section>
    {% endif %}

    {# === Features as Cards (conditional) === #}
    {% if sections.feature_grid %}
    <section class="py-20 px-4">
        <div class="max-w-6xl mx-auto">
            <h2 class="font-heading text-3xl md:text-5xl font-bold text-center mb-4">
                <span style="color: {{ brand.colors.primary }}">Powerful</span> features
            </h2>
            <p class="text-center opacity-70 mb-16 text-lg">
                Everything you need, right in your pocket.
            </p>

            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for feature in content.features %}
                <div class="group p-8 rounded-2xl transition-all duration-300 hover:shadow-2xl hover:-translate-y-2" style="background: linear-gradient(145deg, {{ brand.colors.background }}, {{ brand.colors.secondary }}10); border: 1px solid {{ brand.colors.secondary }}20;">
                    <div class="w-16 h-16 rounded-2xl flex items-center justify-center mb-6 transition-transform group-hover:scale-110" style="background: linear-gradient(135deg, {{ brand.colors.primary }}, {{ brand.colors.secondary }});">
                        <span class="text-3xl" aria-hidden="true">{{ icons[feature.icon] }}</span>
                    </div>
                    <h3 class="font-heading text-2xl font-bold mb-3">{{ feature.title }}</h3>
                    <p class="opacity-70 text-lg">{{ feature.description }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    {% endif %}

    {# === Stats Section (conditional) === #}
    {% if sections.stats %}
    <section class="py-16 px-4" style="background-color: {{ brand.colors.primary }}08">
        <div class="max-w-4xl mx-auto">
            <div class="grid grid-cols-3 gap-8 text-center">
                <div>
                    <p class="font-heading text-4xl md:text-5xl font-bold" style="color: {{ brand.colors.primary }}">100K+</p>
                    <p class="opacity-70 mt-2">Downloads</p>
                </div>
                <div>
                    <p class="font-heading text-4xl md:text-5xl font-bold" style="color: {{ brand.colors.primary }}">4.9</p>
                    <p class="opacity-70 mt-2">App Rating</p>
                </div>
                <div>
                    <p class="font-heading text-4xl md:text-5xl font-bold" style="color: {{ brand.colors.primary }}">50+</p>
                    <p class="opacity-70 mt-2">Countries</p>
                </div>
            </div>
        </div>
    </section>
    {% endif %}

    {# === Logos Section (conditional) === #}
    {% if sections.logos %}
    <section class="py-12 px-4">
        <div class="max-w-4xl mx-auto">
            <p class="text-center opacity-50 text-sm mb-8">Featured in</p>
            <div class="flex flex-wrap justify-center items-center gap-12 opacity-30">
                <div class="h-6 w-24 rounded" style="background-color: {{ brand.colors.text }}"></div>
                <div class="h-6 w-20 rounded" style="background-color: {{ brand.colors.text }}"></div>
                <div class="h-6 w-28 rounded" style="background-color: {{ brand.colors.text }}"></div>
                <div class="h-6 w-16 rounded" style="background-color: {{ brand.colors.text }}"></div>
            </div>
        </div>
    </section>
    {% endif %}

    {# === Testimonial as Review === #}
    <section class="py-20 px-4">
        <div class="max-w-2xl mx-auto text-center">
            <div class="text-4xl mb-6">&#9733;&#9733;&#9733;&#9733;&#9733;</div>
            <blockquote class="text-2xl md:text-3xl font-heading mb-6">
                "{{ content.testimonial.quote }}"
            </blockquote>
            <p class="font-semibold text-lg" style="color: {{ brand.colors.primary }}">{{ content.testimonial.author }}</p>
            <p class="opacity-60">{{ content.testimonial.role }}</p>
        </div>
    </section>

    {# === FAQ Section (conditional) === #}
    {% if sections.faq and content.faq_items %}
    <section class="py-20 px-4" style="background-color: {{ brand.colors.secondary }}08">
        <div class="max-w-3xl mx-auto">
            <h2 class="font-heading text-3xl md:text-4xl font-bold text-center mb-12" style="color: {{ brand.colors.primary }}">
                Questions?
            </h2>
            <div class="space-y-4">
                {% for item in content.faq_items %}
                <div class="p-6 rounded-2xl" style="background-color: {{ brand.colors.background }}; border: 1px solid {{ brand.colors.secondary }}20">
                    <h3 class="font-heading text-lg font-bold mb-2">{{ item.question }}</h3>
                    <p class="opacity-80">{{ item.answer }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    {% elif sections.faq %}
    <section class="py-20 px-4" style="background-color: {{ brand.colors.secondary }}08">
        <div class="max-w-3xl mx-auto">
            <h2 class="font-heading text-3xl md:text-4xl font-bold text-center mb-12" style="color: {{ brand.colors.primary }}">
                Questions?
            </h2>
            <div class="space-y-4">
                <div class="p-6 rounded-2xl" style="background-color: {{ brand.colors.background }}">
                    <div class="h-5 w-2/3 rounded mb-3" style="background-color: {{ brand.colors.text }}15"></div>
                    <div class="h-4 w-full rounded" style="background-color: {{ brand.colors.text }}10"></div>
                </div>
                <div class="p-6 rounded-2xl" style="background-color: {{ brand.colors.background }}">
                    <div class="h-5 w-1/2 rounded mb-3" style="background-color: {{ brand.colors.text }}15"></div>
                    <div class="h-4 w-3/4 rounded" style="background-color: {{ brand.colors.text }}10"></div>
                </div>
            </div>
            <p class="text-center mt-6 text-sm opacity-50">FAQ placeholder</p>
        </div>
    </section>
    {% endif %}

    {# === Pricing Section (conditional) === #}
    {% if sections.pricing %}
    <section class="py-20 px-4">
        <div class="max-w-4xl mx-auto">
            <h2 class="font-heading text-3xl md:text-4xl font-bold text-center mb-4" style="color: {{ brand.colors.primary }}">
                Choose your plan
            </h2>
            <p class="text-center opacity-70 mb-12">
                Start free, upgrade when you need more
            </p>
            {% if content.pricing_plans %}
            <div class="grid md:grid-cols-2 gap-8 max-w-2xl mx-auto">
                {% for plan in content.pricing_plans %}
                <div class="p-8 rounded-3xl text-center {% if loop.index == 2 %}gradient-bg text-white{% endif %}"
                     style="{% if loop.index != 2 %}background-color: {{ brand.colors.background }}; border: 2px solid {{ brand.colors.secondary }}20{% endif %}">
                    <h3 class="font-heading text-2xl font-bold mb-2">{{ plan.name | default('Plan') }}</h3>
                    <p class="text-5xl font-bold mb-4">${{ plan.price | default('X') }}</p>
                    <p class="{% if loop.index != 2 %}opacity-70{% else %}opacity-80{% endif %} mb-8">{{ plan.description | default('per month') }}</p>
                    <a href="#" class="block w-full py-4 {{ tone_style.cta_style }} font-bold transition-all hover:scale-105"
                       style="background-color: {% if loop.index == 2 %}white{% else %}{{ brand.colors.primary }}{% endif %}; color: {% if loop.index == 2 %}{{ brand.colors.primary }}{% else %}white{% endif %}">
                        Get Started
                    </a>
                </div>
                {% endfor %}
            </div>
            {% else %}
            <div class="grid md:grid-cols-2 gap-8 max-w-2xl mx-auto">
                <div class="p-8 rounded-3xl text-center" style="background-color: {{ brand.colors.background }}; border: 2px solid {{ brand.colors.secondary }}20">
                    <div class="h-8 w-20 mx-auto rounded mb-4" style="background-color: {{ brand.colors.text }}15"></div>
                    <div class="h-12 w-24 mx-auto rounded mb-4" style="background-color: {{ brand.colors.primary }}30"></div>
                    <div class="h-4 w-32 mx-auto rounded mb-8" style="background-color: {{ brand.colors.text }}10"></div>
                    <div class="h-14 w-full rounded-xl" style="background-color: {{ brand.colors.primary }}"></div>
                </div>
                <div class="p-8 rounded-3xl text-center gradient-bg">
                    <div class="h-8 w-24 mx-auto rounded mb-4 bg-white/20"></div>
                    <div class="h-12 w-28 mx-auto rounded mb-4 bg-white/30"></div>
                    <div class="h-4 w-32 mx-auto rounded mb-8 bg-white/20"></div>
                    <div class="h-14 w-full rounded-xl bg-white"></div>
                </div>
            </div>
            <p class="text-center mt-6 text-sm opacity-50">Pricing placeholder</p>
            {% endif %}
        </div>
    </section>
    {% endif %}

    {# === Download CTA === #}
    <section class="gradient-bg py-20 px-4 text-center">
        <div class="max-w-2xl mx-auto">
            <h2 class="font-heading text-4xl md:text-5xl font-bold mb-6 text-white">
                {{ content.footer_cta }}
            </h2>
            <p class="text-white opacity-80 mb-8 text-lg">
                Download {{ project.product_name }} now and transform your experience.
            </p>
            <a href="#" class="inline-block px-10 py-5 text-xl font-bold {{ tone_style.cta_style }} transition-all hover:scale-105 hover:shadow-2xl" style="background-color: {{ brand.colors.accent }}; color: {{ brand.colors.text }}">
                Download Free
            </a>
        </div>
    </section>

    {# === Footer === #}
    <footer class="py-8 text-center opacity-60">
        <p>&copy; {{ current_year }} {{ project.product_name }}. All rights reserved.</p>
    </footer>

</body>
</html>
