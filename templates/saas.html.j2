<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ project.product_name }} - {{ project.tagline }}</title>
    <meta name="description" content="{{ project.description[:160] }}">
    <meta name="keywords" content="{{ project.keywords | join(', ') }}">
    {% if assets.og_image_prompt %}
    <!-- OG Image placeholder: {{ assets.og_image_prompt }} -->
    <meta property="og:image" content="https://placehold.co/1200x630/{{ brand.colors.primary[1:] }}/white?text={{ project.product_name | urlencode }}">
    {% endif %}

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family={{ brand.fonts.heading | replace(' ', '+') }}:wght@600;700&family={{ brand.fonts.body | replace(' ', '+') }}:wght@400;500&display=swap" rel="stylesheet">

    <!-- Tailwind Config -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '{{ brand.colors.primary }}',
                        secondary: '{{ brand.colors.secondary }}',
                        accent: '{{ brand.colors.accent }}',
                    },
                    fontFamily: {
                        heading: ['{{ brand.fonts.heading }}', 'sans-serif'],
                        body: ['{{ brand.fonts.body }}', 'sans-serif'],
                    }
                }
            }
        }
    </script>
</head>
<body class="font-body" style="background-color: {{ brand.colors.background }}; color: {{ brand.colors.text }}">

    {# === TEMPLATE: SaaS - Clean, professional, conversion-focused === #}
    {# === Tone: {{ tone }} === #}

    {# === Hero Section === #}
    <section class="min-h-screen flex items-center justify-center px-4">
        <div class="max-w-4xl mx-auto text-center">
            <span class="inline-block px-4 py-2 rounded-full text-sm font-medium mb-6" style="background-color: {{ brand.colors.primary }}15; color: {{ brand.colors.primary }}">
                {{ project.tagline }}
            </span>
            <h1 class="font-heading {{ tone_style.hero_size }} font-bold mb-6" style="color: {{ brand.colors.text }}">
                {{ headline }}
            </h1>
            <p class="text-xl md:text-2xl mb-8 opacity-80 max-w-2xl mx-auto">
                {{ content.hero.subheadline }}
            </p>

            {# Asset placeholder: Hero image #}
            {% if assets.hero_image_prompt %}
            <div class="mb-8 mx-auto max-w-3xl">
                <div class="aspect-video rounded-xl overflow-hidden shadow-2xl border" style="border-color: {{ brand.colors.secondary }}20">
                    <!-- Hero image placeholder: {{ assets.hero_image_prompt }} -->
                    <img src="https://placehold.co/1280x720/{{ brand.colors.primary[1:] }}/white?text={{ project.product_name | urlencode }}+Dashboard"
                         alt="{{ assets.hero_image_alt or project.product_name }}"
                         class="w-full h-full object-cover">
                </div>
            </div>
            {% endif %}

            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="#" class="inline-block px-8 py-4 text-lg font-medium {{ tone_style.cta_style }} text-white transition-all hover:scale-105 hover:shadow-lg" style="background-color: {{ brand.colors.primary }}">
                    {{ cta_text }}
                </a>
                <a href="#features" class="inline-block px-8 py-4 text-lg font-medium {{ tone_style.cta_style }} border-2 transition-all hover:scale-105" style="border-color: {{ brand.colors.primary }}; color: {{ brand.colors.primary }}">
                    Learn More
                </a>
            </div>
        </div>
    </section>

    {# === Logos Section (conditional) === #}
    {% if sections.logos %}
    <section class="py-8 border-y" style="border-color: {{ brand.colors.secondary }}30">
        <div class="max-w-6xl mx-auto px-4">
            <p class="text-center opacity-60 text-sm mb-6">Trusted by innovative teams worldwide</p>
            <div class="flex flex-wrap justify-center items-center gap-8 opacity-40">
                <!-- Logo placeholders -->
                <div class="h-8 w-24 rounded" style="background-color: {{ brand.colors.text }}20"></div>
                <div class="h-8 w-28 rounded" style="background-color: {{ brand.colors.text }}20"></div>
                <div class="h-8 w-20 rounded" style="background-color: {{ brand.colors.text }}20"></div>
                <div class="h-8 w-32 rounded" style="background-color: {{ brand.colors.text }}20"></div>
                <div class="h-8 w-24 rounded" style="background-color: {{ brand.colors.text }}20"></div>
            </div>
        </div>
    </section>
    {% endif %}

    {# === Features Section (conditional) === #}
    {% if sections.feature_grid %}
    <section id="features" class="py-20 px-4" style="background-color: {{ brand.colors.secondary }}08">
        <div class="max-w-6xl mx-auto">
            <h2 class="font-heading text-3xl md:text-4xl font-bold text-center mb-4" style="color: {{ brand.colors.primary }}">
                Everything you need to succeed
            </h2>
            <p class="text-center opacity-70 mb-16 max-w-2xl mx-auto">
                {{ project.product_name }} gives you all the tools to {{ project.value_proposition | lower }}.
            </p>
            <div class="grid md:grid-cols-3 gap-8">
                {% for feature in content.features %}
                <div class="p-6 rounded-xl border transition-all hover:shadow-lg hover:-translate-y-1" style="background-color: {{ brand.colors.background }}; border-color: {{ brand.colors.secondary }}20">
                    <div class="w-12 h-12 rounded-lg flex items-center justify-center mb-4" style="background-color: {{ brand.colors.accent }}20">
                        <span class="text-2xl" aria-hidden="true">{{ icons[feature.icon] }}</span>
                    </div>
                    <h3 class="font-heading text-xl font-bold mb-2">{{ feature.title }}</h3>
                    <p class="opacity-80">{{ feature.description }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    {% endif %}

    {# === Screenshots Section (conditional) === #}
    {% if sections.screenshots %}
    <section class="py-20 px-4">
        <div class="max-w-6xl mx-auto">
            <h2 class="font-heading text-3xl md:text-4xl font-bold text-center mb-12" style="color: {{ brand.colors.primary }}">
                See it in action
            </h2>
            <div class="grid md:grid-cols-2 gap-8">
                {% for prompt in assets.screenshot_prompts %}
                <div class="rounded-xl overflow-hidden shadow-lg border" style="border-color: {{ brand.colors.secondary }}20">
                    <!-- Screenshot placeholder: {{ prompt }} -->
                    <img src="https://placehold.co/800x600/{{ brand.colors.secondary[1:] }}/white?text=Screenshot+{{ loop.index }}"
                         alt="{{ project.product_name }} screenshot {{ loop.index }}"
                         class="w-full h-auto">
                </div>
                {% else %}
                <div class="rounded-xl overflow-hidden shadow-lg border col-span-2" style="border-color: {{ brand.colors.secondary }}20">
                    <img src="https://placehold.co/1200x600/{{ brand.colors.secondary[1:] }}/white?text={{ project.product_name | urlencode }}+Screenshot"
                         alt="{{ project.product_name }} screenshot"
                         class="w-full h-auto">
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    {% endif %}

    {# === Stats Section (conditional) === #}
    {% if sections.stats %}
    <section class="py-16 px-4" style="background-color: {{ brand.colors.primary }}08">
        <div class="max-w-4xl mx-auto">
            <div class="grid grid-cols-3 gap-8 text-center">
                <div>
                    <p class="font-heading text-4xl md:text-5xl font-bold" style="color: {{ brand.colors.primary }}">10K+</p>
                    <p class="opacity-70 mt-2">Active Users</p>
                </div>
                <div>
                    <p class="font-heading text-4xl md:text-5xl font-bold" style="color: {{ brand.colors.primary }}">99.9%</p>
                    <p class="opacity-70 mt-2">Uptime</p>
                </div>
                <div>
                    <p class="font-heading text-4xl md:text-5xl font-bold" style="color: {{ brand.colors.primary }}">24/7</p>
                    <p class="opacity-70 mt-2">Support</p>
                </div>
            </div>
        </div>
    </section>
    {% endif %}

    {# === Testimonial Section === #}
    <section class="py-20 px-4">
        <div class="max-w-4xl mx-auto">
            <div class="p-8 md:p-12 rounded-2xl" style="background-color: {{ brand.colors.primary }}08; border: 1px solid {{ brand.colors.primary }}15">
                <blockquote class="text-2xl md:text-3xl mb-6 font-heading" style="color: {{ brand.colors.text }}">
                    "{{ content.testimonial.quote }}"
                </blockquote>
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 rounded-full flex items-center justify-center text-white font-bold" style="background-color: {{ brand.colors.primary }}">
                        {{ content.testimonial.author[0] }}
                    </div>
                    <div>
                        <p class="font-medium" style="color: {{ brand.colors.primary }}">{{ content.testimonial.author }}</p>
                        <p class="opacity-70 text-sm">{{ content.testimonial.role }}</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# === FAQ Section (conditional) === #}
    {% if sections.faq and content.faq_items %}
    <section class="py-20 px-4" style="background-color: {{ brand.colors.secondary }}08">
        <div class="max-w-3xl mx-auto">
            <h2 class="font-heading text-3xl md:text-4xl font-bold text-center mb-12" style="color: {{ brand.colors.primary }}">
                Frequently Asked Questions
            </h2>
            <div class="space-y-6">
                {% for item in content.faq_items %}
                <div class="p-6 rounded-xl" style="background-color: {{ brand.colors.background }}; border: 1px solid {{ brand.colors.secondary }}20">
                    <h3 class="font-heading text-lg font-bold mb-2">{{ item.question }}</h3>
                    <p class="opacity-80">{{ item.answer }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    {% elif sections.faq %}
    {# FAQ enabled but no content - show placeholder #}
    <section class="py-20 px-4" style="background-color: {{ brand.colors.secondary }}08">
        <div class="max-w-3xl mx-auto">
            <h2 class="font-heading text-3xl md:text-4xl font-bold text-center mb-12" style="color: {{ brand.colors.primary }}">
                Frequently Asked Questions
            </h2>
            <div class="space-y-6">
                <div class="p-6 rounded-xl" style="background-color: {{ brand.colors.background }}; border: 1px solid {{ brand.colors.secondary }}20">
                    <div class="h-4 w-3/4 rounded mb-3" style="background-color: {{ brand.colors.text }}15"></div>
                    <div class="h-3 w-full rounded mb-2" style="background-color: {{ brand.colors.text }}10"></div>
                    <div class="h-3 w-2/3 rounded" style="background-color: {{ brand.colors.text }}10"></div>
                </div>
                <div class="p-6 rounded-xl" style="background-color: {{ brand.colors.background }}; border: 1px solid {{ brand.colors.secondary }}20">
                    <div class="h-4 w-2/3 rounded mb-3" style="background-color: {{ brand.colors.text }}15"></div>
                    <div class="h-3 w-full rounded mb-2" style="background-color: {{ brand.colors.text }}10"></div>
                    <div class="h-3 w-3/4 rounded" style="background-color: {{ brand.colors.text }}10"></div>
                </div>
            </div>
            <p class="text-center mt-6 text-sm opacity-50">FAQ content placeholder</p>
        </div>
    </section>
    {% endif %}

    {# === Pricing Section (conditional) === #}
    {% if sections.pricing %}
    <section class="py-20 px-4">
        <div class="max-w-5xl mx-auto">
            <h2 class="font-heading text-3xl md:text-4xl font-bold text-center mb-4" style="color: {{ brand.colors.primary }}">
                Simple, transparent pricing
            </h2>
            <p class="text-center opacity-70 mb-12 max-w-2xl mx-auto">
                Choose the plan that works best for you
            </p>
            {% if content.pricing_plans %}
            <div class="grid md:grid-cols-3 gap-8">
                {% for plan in content.pricing_plans %}
                <div class="p-8 rounded-2xl border text-center {% if loop.index == 2 %}scale-105 shadow-xl{% endif %}"
                     style="background-color: {{ brand.colors.background }}; border-color: {% if loop.index == 2 %}{{ brand.colors.primary }}{% else %}{{ brand.colors.secondary }}20{% endif %}">
                    <h3 class="font-heading text-xl font-bold mb-2">{{ plan.name | default('Plan ' ~ loop.index) }}</h3>
                    <p class="text-4xl font-bold mb-4" style="color: {{ brand.colors.primary }}">${{ plan.price | default('XX') }}</p>
                    <p class="opacity-70 mb-6">{{ plan.description | default('Per month') }}</p>
                    <a href="#" class="block w-full py-3 {{ tone_style.cta_style }} font-medium transition-all hover:opacity-90"
                       style="background-color: {% if loop.index == 2 %}{{ brand.colors.primary }}{% else %}{{ brand.colors.secondary }}20{% endif %}; color: {% if loop.index == 2 %}white{% else %}{{ brand.colors.text }}{% endif %}">
                        Get Started
                    </a>
                </div>
                {% endfor %}
            </div>
            {% else %}
            {# Pricing placeholder #}
            <div class="grid md:grid-cols-3 gap-8">
                <div class="p-8 rounded-2xl border text-center" style="border-color: {{ brand.colors.secondary }}20">
                    <div class="h-6 w-20 mx-auto rounded mb-4" style="background-color: {{ brand.colors.text }}15"></div>
                    <div class="h-10 w-16 mx-auto rounded mb-4" style="background-color: {{ brand.colors.primary }}30"></div>
                    <div class="h-4 w-24 mx-auto rounded mb-6" style="background-color: {{ brand.colors.text }}10"></div>
                    <div class="h-12 w-full rounded" style="background-color: {{ brand.colors.secondary }}20"></div>
                </div>
                <div class="p-8 rounded-2xl border text-center scale-105 shadow-xl" style="border-color: {{ brand.colors.primary }}">
                    <div class="h-6 w-24 mx-auto rounded mb-4" style="background-color: {{ brand.colors.text }}15"></div>
                    <div class="h-10 w-20 mx-auto rounded mb-4" style="background-color: {{ brand.colors.primary }}30"></div>
                    <div class="h-4 w-24 mx-auto rounded mb-6" style="background-color: {{ brand.colors.text }}10"></div>
                    <div class="h-12 w-full rounded" style="background-color: {{ brand.colors.primary }}"></div>
                </div>
                <div class="p-8 rounded-2xl border text-center" style="border-color: {{ brand.colors.secondary }}20">
                    <div class="h-6 w-28 mx-auto rounded mb-4" style="background-color: {{ brand.colors.text }}15"></div>
                    <div class="h-10 w-20 mx-auto rounded mb-4" style="background-color: {{ brand.colors.primary }}30"></div>
                    <div class="h-4 w-24 mx-auto rounded mb-6" style="background-color: {{ brand.colors.text }}10"></div>
                    <div class="h-12 w-full rounded" style="background-color: {{ brand.colors.secondary }}20"></div>
                </div>
            </div>
            <p class="text-center mt-6 text-sm opacity-50">Pricing placeholder</p>
            {% endif %}
        </div>
    </section>
    {% endif %}

    {# === Footer CTA Section === #}
    <section class="py-20 px-4 text-center" style="background-color: {{ brand.colors.primary }}">
        <div class="max-w-2xl mx-auto">
            <h2 class="font-heading text-3xl md:text-4xl font-bold mb-4 text-white">
                {{ content.footer_cta }}
            </h2>
            <p class="text-white opacity-80 mb-8">
                Join thousands of users already using {{ project.product_name }}.
            </p>
            <a href="#" class="inline-block px-8 py-4 text-lg font-medium {{ tone_style.cta_style }} transition-all hover:scale-105 hover:shadow-lg" style="background-color: {{ brand.colors.accent }}; color: {{ brand.colors.text }}">
                Start Free Trial
            </a>
        </div>
    </section>

    {# === Footer === #}
    <footer class="py-8 text-center opacity-60">
        <p>&copy; {{ current_year }} {{ project.product_name }}. All rights reserved.</p>
    </footer>

</body>
</html>
