<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ project.product_name }} - {{ project.tagline }}</title>
    <meta name="description" content="{{ project.description[:160] }}">
    <meta name="keywords" content="{{ project.keywords | join(', ') }}">
    {% if assets.og_image_prompt %}
    <!-- OG Image placeholder: {{ assets.og_image_prompt }} -->
    <meta property="og:image" content="https://placehold.co/1200x630/{{ brand.colors.primary[1:] }}/white?text={{ project.product_name | urlencode }}">
    {% endif %}

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family={{ brand.fonts.heading | replace(' ', '+') }}:wght@400;600;700&family={{ brand.fonts.body | replace(' ', '+') }}:wght@300;400;500&display=swap" rel="stylesheet">

    <!-- Tailwind Config -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '{{ brand.colors.primary }}',
                        secondary: '{{ brand.colors.secondary }}',
                        accent: '{{ brand.colors.accent }}',
                    },
                    fontFamily: {
                        heading: ['{{ brand.fonts.heading }}', 'serif'],
                        body: ['{{ brand.fonts.body }}', 'sans-serif'],
                    }
                }
            }
        }
    </script>
</head>
<body class="font-body" style="background-color: {{ brand.colors.background }}; color: {{ brand.colors.text }}">

    {# === TEMPLATE: Agency - Elegant, minimalist, premium feel === #}
    {# === Tone: {{ tone }} === #}

    {# === Navigation === #}
    <nav class="fixed top-0 left-0 right-0 z-50 py-6 px-8" style="background-color: {{ brand.colors.background }}ee">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
            {% if assets.logo_url %}
            <img src="{{ assets.logo_url }}" alt="{{ project.product_name }}" class="h-8">
            {% else %}
            <span class="font-heading text-2xl font-semibold" style="color: {{ brand.colors.primary }}">{{ project.product_name }}</span>
            {% endif %}
            <a href="#contact" class="px-6 py-2 {{ tone_style.cta_style }} text-sm font-medium tracking-wide uppercase transition-all hover:opacity-80" style="background-color: {{ brand.colors.primary }}; color: white;">
                Contact
            </a>
        </div>
    </nav>

    {# === Hero Section - Full screen, minimal === #}
    <section class="min-h-screen flex items-center px-8 pt-20">
        <div class="max-w-7xl mx-auto w-full">
            <div class="grid lg:grid-cols-2 gap-16 items-center">
                <div>
                    <p class="text-sm uppercase tracking-widest mb-6 opacity-60">{{ project.tagline }}</p>
                    <h1 class="font-heading {{ tone_style.hero_size }} leading-tight mb-8">
                        {{ headline }}
                    </h1>
                    <p class="text-xl opacity-70 mb-10 max-w-lg leading-relaxed">
                        {{ content.hero.subheadline }}
                    </p>
                    <div class="flex gap-6">
                        <a href="#work" class="inline-block px-8 py-4 font-medium tracking-wide transition-all hover:translate-x-2 {{ tone_style.cta_style }}" style="background-color: {{ brand.colors.primary }}; color: white;">
                            {{ cta_text }} &rarr;
                        </a>
                    </div>
                </div>
                <div class="hidden lg:block">
                    {% if assets.hero_image_prompt %}
                    <div class="aspect-square rounded-sm overflow-hidden">
                        <!-- Hero image placeholder: {{ assets.hero_image_prompt }} -->
                        <img src="https://placehold.co/800x800/{{ brand.colors.primary[1:] }}/white?text={{ project.product_name | urlencode }}"
                             alt="{{ assets.hero_image_alt or project.product_name }}"
                             class="w-full h-full object-cover">
                    </div>
                    {% else %}
                    <div class="aspect-square rounded-sm" style="background: linear-gradient(135deg, {{ brand.colors.primary }}20, {{ brand.colors.secondary }}20);"></div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>

    {# === Logos Section (conditional) === #}
    {% if sections.logos %}
    <section class="py-16 px-8">
        <div class="max-w-7xl mx-auto">
            <p class="text-sm uppercase tracking-widest mb-10 opacity-40">Trusted by</p>
            <div class="flex flex-wrap gap-16 items-center opacity-30">
                <div class="h-8 w-28 rounded" style="background-color: {{ brand.colors.text }}"></div>
                <div class="h-8 w-24 rounded" style="background-color: {{ brand.colors.text }}"></div>
                <div class="h-8 w-32 rounded" style="background-color: {{ brand.colors.text }}"></div>
                <div class="h-8 w-20 rounded" style="background-color: {{ brand.colors.text }}"></div>
                <div class="h-8 w-28 rounded" style="background-color: {{ brand.colors.text }}"></div>
            </div>
        </div>
    </section>
    {% endif %}

    {# === Services/Features - Horizontal scroll feel (conditional) === #}
    {% if sections.feature_grid %}
    <section id="work" class="py-32 px-8" style="background-color: {{ brand.colors.text }}; color: {{ brand.colors.background }};">
        <div class="max-w-7xl mx-auto">
            <div class="flex justify-between items-end mb-20">
                <h2 class="font-heading text-4xl md:text-5xl font-semibold">
                    What we do
                </h2>
                <p class="opacity-60 hidden md:block">Our expertise</p>
            </div>

            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-px" style="background-color: {{ brand.colors.background }}20">
                {% for feature in content.features %}
                <div class="p-10" style="background-color: {{ brand.colors.text }};">
                    <span class="inline-block text-4xl mb-8 opacity-80">{{ icons[feature.icon] }}</span>
                    <h3 class="font-heading text-2xl font-semibold mb-4">{{ feature.title }}</h3>
                    <p class="opacity-60 leading-relaxed">{{ feature.description }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    {% endif %}

    {# === Screenshots/Portfolio Section (conditional) === #}
    {% if sections.screenshots %}
    <section class="py-32 px-8">
        <div class="max-w-7xl mx-auto">
            <div class="flex justify-between items-end mb-16">
                <h2 class="font-heading text-4xl md:text-5xl font-semibold" style="color: {{ brand.colors.primary }}">
                    Selected work
                </h2>
                <p class="opacity-60 hidden md:block">Recent projects</p>
            </div>
            <div class="grid md:grid-cols-2 gap-8">
                {% for prompt in assets.screenshot_prompts %}
                <div class="group">
                    <div class="aspect-[4/3] overflow-hidden mb-4">
                        <!-- Screenshot placeholder: {{ prompt }} -->
                        <img src="https://placehold.co/800x600/{{ brand.colors.secondary[1:] }}/white?text=Project+{{ loop.index }}"
                             alt="Project {{ loop.index }}"
                             class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105">
                    </div>
                    <p class="font-heading text-xl">Project {{ loop.index }}</p>
                </div>
                {% else %}
                <div class="group">
                    <div class="aspect-[4/3] overflow-hidden mb-4" style="background: linear-gradient(135deg, {{ brand.colors.primary }}20, {{ brand.colors.secondary }}20);">
                    </div>
                    <div class="h-6 w-32 rounded" style="background-color: {{ brand.colors.text }}15"></div>
                </div>
                <div class="group">
                    <div class="aspect-[4/3] overflow-hidden mb-4" style="background: linear-gradient(135deg, {{ brand.colors.secondary }}20, {{ brand.colors.primary }}20);">
                    </div>
                    <div class="h-6 w-40 rounded" style="background-color: {{ brand.colors.text }}15"></div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    {% endif %}

    {# === Stats Section (conditional) === #}
    {% if sections.stats %}
    <section class="py-20 px-8" style="background-color: {{ brand.colors.secondary }}08">
        <div class="max-w-7xl mx-auto">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-12 text-center">
                <div>
                    <p class="font-heading text-5xl md:text-6xl font-semibold" style="color: {{ brand.colors.primary }}">15+</p>
                    <p class="opacity-60 mt-2 uppercase tracking-wider text-sm">Years</p>
                </div>
                <div>
                    <p class="font-heading text-5xl md:text-6xl font-semibold" style="color: {{ brand.colors.primary }}">200+</p>
                    <p class="opacity-60 mt-2 uppercase tracking-wider text-sm">Projects</p>
                </div>
                <div>
                    <p class="font-heading text-5xl md:text-6xl font-semibold" style="color: {{ brand.colors.primary }}">50+</p>
                    <p class="opacity-60 mt-2 uppercase tracking-wider text-sm">Clients</p>
                </div>
                <div>
                    <p class="font-heading text-5xl md:text-6xl font-semibold" style="color: {{ brand.colors.primary }}">12</p>
                    <p class="opacity-60 mt-2 uppercase tracking-wider text-sm">Awards</p>
                </div>
            </div>
        </div>
    </section>
    {% endif %}

    {# === Client Quote === #}
    <section class="py-32 px-8">
        <div class="max-w-5xl mx-auto">
            <div class="border-l-4 pl-12" style="border-color: {{ brand.colors.primary }}">
                <blockquote class="font-heading text-3xl md:text-4xl lg:text-5xl leading-snug mb-10">
                    {{ content.testimonial.quote }}
                </blockquote>
                <div>
                    <p class="font-medium text-lg">{{ content.testimonial.author }}</p>
                    <p class="opacity-50">{{ content.testimonial.role }}</p>
                </div>
            </div>
        </div>
    </section>

    {# === FAQ Section (conditional) === #}
    {% if sections.faq and content.faq_items %}
    <section class="py-32 px-8" style="background-color: {{ brand.colors.secondary }}05">
        <div class="max-w-4xl mx-auto">
            <h2 class="font-heading text-4xl md:text-5xl font-semibold mb-16" style="color: {{ brand.colors.primary }}">
                Common questions
            </h2>
            <div class="space-y-0 divide-y" style="border-color: {{ brand.colors.secondary }}20">
                {% for item in content.faq_items %}
                <div class="py-8">
                    <h3 class="font-heading text-xl font-semibold mb-3">{{ item.question }}</h3>
                    <p class="opacity-70 leading-relaxed">{{ item.answer }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    {% elif sections.faq %}
    <section class="py-32 px-8" style="background-color: {{ brand.colors.secondary }}05">
        <div class="max-w-4xl mx-auto">
            <h2 class="font-heading text-4xl md:text-5xl font-semibold mb-16" style="color: {{ brand.colors.primary }}">
                Common questions
            </h2>
            <div class="space-y-8">
                <div class="py-8 border-b" style="border-color: {{ brand.colors.secondary }}20">
                    <div class="h-6 w-2/3 rounded mb-4" style="background-color: {{ brand.colors.text }}15"></div>
                    <div class="h-4 w-full rounded mb-2" style="background-color: {{ brand.colors.text }}08"></div>
                    <div class="h-4 w-3/4 rounded" style="background-color: {{ brand.colors.text }}08"></div>
                </div>
                <div class="py-8 border-b" style="border-color: {{ brand.colors.secondary }}20">
                    <div class="h-6 w-1/2 rounded mb-4" style="background-color: {{ brand.colors.text }}15"></div>
                    <div class="h-4 w-full rounded mb-2" style="background-color: {{ brand.colors.text }}08"></div>
                    <div class="h-4 w-2/3 rounded" style="background-color: {{ brand.colors.text }}08"></div>
                </div>
            </div>
            <p class="mt-8 text-sm opacity-40">FAQ placeholder</p>
        </div>
    </section>
    {% endif %}

    {# === Pricing Section (conditional) === #}
    {% if sections.pricing %}
    <section class="py-32 px-8">
        <div class="max-w-5xl mx-auto">
            <div class="text-center mb-16">
                <h2 class="font-heading text-4xl md:text-5xl font-semibold mb-4" style="color: {{ brand.colors.primary }}">
                    Investment
                </h2>
                <p class="opacity-60 max-w-xl mx-auto">
                    Transparent pricing for every stage of growth
                </p>
            </div>
            {% if content.pricing_plans %}
            <div class="grid md:grid-cols-3 gap-0 border" style="border-color: {{ brand.colors.secondary }}20">
                {% for plan in content.pricing_plans %}
                <div class="p-12 {% if not loop.last %}border-r{% endif %} {% if loop.index == 2 %}bg-opacity-5{% endif %}"
                     style="{% if loop.index == 2 %}background-color: {{ brand.colors.primary }}05{% endif %}; border-color: {{ brand.colors.secondary }}20">
                    <p class="uppercase tracking-widest text-sm opacity-50 mb-4">{{ plan.name | default('Tier ' ~ loop.index) }}</p>
                    <p class="font-heading text-5xl font-semibold mb-6" style="color: {{ brand.colors.primary }}">${{ plan.price | default('XXX') }}</p>
                    <p class="opacity-60 mb-8">{{ plan.description | default('Custom scope') }}</p>
                    <a href="#contact" class="inline-block px-8 py-4 {{ tone_style.cta_style }} font-medium tracking-wide transition-all hover:opacity-80"
                       style="background-color: {% if loop.index == 2 %}{{ brand.colors.primary }}{% else %}transparent{% endif %}; color: {% if loop.index == 2 %}white{% else %}{{ brand.colors.primary }}{% endif %}; {% if loop.index != 2 %}border: 1px solid {{ brand.colors.primary }}{% endif %}">
                        Get Started
                    </a>
                </div>
                {% endfor %}
            </div>
            {% else %}
            <div class="grid md:grid-cols-3 gap-0 border" style="border-color: {{ brand.colors.secondary }}20">
                <div class="p-12 border-r" style="border-color: {{ brand.colors.secondary }}20">
                    <div class="h-4 w-16 rounded mb-6" style="background-color: {{ brand.colors.text }}15"></div>
                    <div class="h-12 w-24 rounded mb-6" style="background-color: {{ brand.colors.primary }}20"></div>
                    <div class="h-4 w-full rounded mb-8" style="background-color: {{ brand.colors.text }}08"></div>
                    <div class="h-12 w-32 rounded border" style="border-color: {{ brand.colors.primary }}"></div>
                </div>
                <div class="p-12 border-r" style="background-color: {{ brand.colors.primary }}05; border-color: {{ brand.colors.secondary }}20">
                    <div class="h-4 w-20 rounded mb-6" style="background-color: {{ brand.colors.text }}15"></div>
                    <div class="h-12 w-28 rounded mb-6" style="background-color: {{ brand.colors.primary }}20"></div>
                    <div class="h-4 w-full rounded mb-8" style="background-color: {{ brand.colors.text }}08"></div>
                    <div class="h-12 w-32 rounded" style="background-color: {{ brand.colors.primary }}"></div>
                </div>
                <div class="p-12">
                    <div class="h-4 w-24 rounded mb-6" style="background-color: {{ brand.colors.text }}15"></div>
                    <div class="h-12 w-32 rounded mb-6" style="background-color: {{ brand.colors.primary }}20"></div>
                    <div class="h-4 w-full rounded mb-8" style="background-color: {{ brand.colors.text }}08"></div>
                    <div class="h-12 w-32 rounded border" style="border-color: {{ brand.colors.primary }}"></div>
                </div>
            </div>
            <p class="text-center mt-6 text-sm opacity-40">Pricing placeholder</p>
            {% endif %}
        </div>
    </section>
    {% endif %}

    {# === Contact CTA === #}
    <section id="contact" class="py-32 px-8" style="background-color: {{ brand.colors.primary }}08">
        <div class="max-w-4xl mx-auto text-center">
            <p class="text-sm uppercase tracking-widest mb-6 opacity-60">Ready to start?</p>
            <h2 class="font-heading text-4xl md:text-5xl lg:text-6xl font-semibold mb-8">
                {{ content.footer_cta }}
            </h2>
            <p class="text-xl opacity-70 mb-12 max-w-2xl mx-auto">
                Let's discuss how {{ project.product_name }} can help transform your vision into reality.
            </p>
            <a href="mailto:hello@{{ project.product_name | lower | replace(' ', '') }}.com" class="inline-block px-10 py-5 text-lg font-medium tracking-wide transition-all hover:scale-105 {{ tone_style.cta_style }}" style="background-color: {{ brand.colors.primary }}; color: white;">
                Get in Touch
            </a>
        </div>
    </section>

    {# === Footer === #}
    <footer class="py-12 px-8 border-t" style="border-color: {{ brand.colors.secondary }}20">
        <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-4">
            {% if assets.logo_url %}
            <img src="{{ assets.logo_url }}" alt="{{ project.product_name }}" class="h-6 opacity-70">
            {% else %}
            <span class="font-heading text-xl" style="color: {{ brand.colors.primary }}">{{ project.product_name }}</span>
            {% endif %}
            <p class="opacity-40 text-sm">&copy; {{ current_year }} All rights reserved.</p>
        </div>
    </footer>

</body>
</html>
